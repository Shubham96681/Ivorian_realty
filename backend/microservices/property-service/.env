AWS_S3_BUCKET=ivorian-realty-files

# Image Processing
IMAGE_QUALITY=80
THUMBNAIL_SIZE=300
MAX_IMAGE_DIMENSION=2048

# Search Configuration
SEARCH_INDEX_NAME=properties
ELASTICSEARCH_URL=http://localhost:9200

# Logging
LOG_LEVEL=info
